<%- include('partials/header') %>
    <h1>
        <%= locals.book ? 'Update Book' : 'Add New Book' %>
    </h1>
    <form action="<%= locals.book ? '/update-book/' + book.id : '/add-book' %>" method="POST" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= locals.book ? book.title : '' %>" required><br><br>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="<%= locals.book ? book.author : '' %>" required><br><br>

        <label for="year">Published Year:</label>
        <input type="number" id="year" name="year" value="<%= locals.book ? book.year : '' %>" required><br><br>

        <label for="publisher">Publisher:</label>
        <input type="text" id="publisher" name="publisher" value="<%= locals.book ? book.publisher : '' %>" required><br><br>

        <label for="image">Upload New Image (optional):</label>
        <input type="file" id="image" name="image" accept="image/*"><br><br>

        <button type="submit">
            <%= locals.book ? 'Update Book' : 'Add Book' %>
        </button>
    </form>
<%- include('partials/footer') %>